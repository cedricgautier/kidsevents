{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{asset('css/Admin/style.css')}}">
{% endblock %}


{% block body %}
	<body class='bodyImg'>
	<a href="{{ url('admin.homepage') }}" class="retour">Retour</a>
	<div class="text-box">
		<div class="row">
			<div class="col">
				<h1>Gestion des Options</h1>
				{#
					affichage des messages flash
					notice est la clé créée dans le contrôleur
				#}
				{% for item in app.flashes('notice') %}
					<p class="alert alert-success">{{ item }}</p>
				{% endfor %}

					<p>
						<a href="{{ url('option_create') }}" class="btn btn-primary">Ajouter</a>
					</p>

				<table class="table table-striped">
					<tr>
						<th>intitule</th>
						<th>descriptif</th>
						<th>prix</th>
					</tr>
					{# results est envoyé par le contrôleur #}
					{% for options in results %}
						<tr>
							<td>
								{{ options.intitule }}
							</td>
							<td>
								{{ options.descriptif }}
							</td>
							<td>
								{{ options.prix }} €
							</td>
							<td>
								<a href="{{url('option_edit', {id: options.id} ) }}",  class="btn btn-warning">Modifier</a>

								<a href="{{url('admin.options.remove', {id: options.id} ) }}" class="btn btn-danger">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</table>
			</div>
		</div>
	</div>
{% endblock %}