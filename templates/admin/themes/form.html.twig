{% extends 'base.html.twig' %}

{% form_theme formView 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{asset('css/Admin/style.css')}}">
{% endblock %}


{% block body %}
    <div class="container pt-5">

        <h1>Edit du Theme </h1>

        {{form_start(formView)}}
        {{form_errors(formView)}}

        <div class="row">
            <div class="col ">
                {{form_row(formView.intitule)}}
                {{form_row(formView.descriptif)}}
                {{form_row(formView.duree)}}
                {{form_row(formView.prix)}}
            </div>
            <div class="col">
                {# {{form_row(formView.category)}} #}
                {{form_row(formView.age_min)}}
                {{form_row(formView.age_max)}}
                {{form_row(formView.nbenfant_min)}}
                {{form_row(formView.nbenfant_max)}}
                {{form_row(formView.image)}}

            </div>
        </div>


        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i>
            Cr√©er le Theme
        </button>

        {{form_end(formView)}}

    </div>



    
{% endblock %}